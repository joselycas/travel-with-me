<h1>Edit Your Trip</h1>

<form action="/travels/<%=@travel.id%>" method="POST">
  <input type="hidden" id="hidden" name="_method" value="PATCH"
  <label>Location</label><br>
  <input type="text" name="location" id="location" value="<%= @travel.location%>"/><br><br>
  <label>Activity</label><br>
  <input type="text" name="activity" id="activity" value="<%= @travel.activity %>"/><br><br>
  <label>Date</label><br>
  <input type="text" name="travel_date" id="travel_date" value="<%= @travel.travel_date %>"/><br><br>
  <input type="submit" name="submit" id="submit" />
</form>
